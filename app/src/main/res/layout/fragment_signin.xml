<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">





    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"


        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="@string/type_ur_email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:shadowRadius="8"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextEmailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"


        android:layout_marginLeft="40dp"

        android:layout_marginRight="40dp"
        android:ems="10"
        android:hint="@string/type_ur_pass"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textSize="18sp"
       />

    <ImageView
        android:id="@+id/slikaHide"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignTop="@id/editTextTextPassword"
        android:layout_alignEnd="@id/editTextTextPassword"
        android:src="@drawable/hide"
        android:layout_alignBottom="@id/editTextTextPassword"
        android:layout_marginStart="8dp" />


    <Button
        android:id="@+id/loginButtonsignup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="80dp"
        android:layout_marginTop="21dp"

        android:layout_marginRight="80dp"
        android:background="@android:color/holo_green_light"
        android:text="Log In" />

    <TextView
        android:id="@+id/signUpLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButtonsignup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="80dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="135dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Register now"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

</RelativeLayout>
