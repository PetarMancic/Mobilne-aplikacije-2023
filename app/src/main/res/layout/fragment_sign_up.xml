<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">



    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_centerInParent="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="@string/type_ur_email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:shadowRadius="8"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="71dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-9dp"
            android:layout_marginEnd="81dp"
            android:layout_marginRight="38dp"
            android:ems="10"
            android:hint="@string/type_ur_pass"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/slikaHide"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignEnd="@id/editTextTextPassword"
            android:layout_alignBottom="@id/editTextTextPassword"
            android:layout_marginEnd="-29dp"
            android:layout_marginBottom="11dp"
            android:clickable="true"
            android:src="@drawable/hide" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextConfirmpass"
            android:layout_width="261dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="35dp"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/slikaHide2"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignTop="@id/editTextConfirmpass"
            android:layout_alignEnd="@id/editTextConfirmpass"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-28dp"
            android:foregroundGravity="center"
            android:clickable="true"
            android:src="@drawable/hide" />

    </RelativeLayout>

    <Button
        android:id="@+id/loginButtonsignup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="70dp"
        android:background="@android:color/holo_green_light"
        android:text="Register now" />

    <TextView
        android:id="@+id/signUpLabel"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_below="@+id/loginButtonsignup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="135dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Sign up"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />



</LinearLayout>
